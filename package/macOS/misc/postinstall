#!/bin/bash

PLUGINS_DIR="/Applications/OBS.app/Contents/PlugIns"
PLUGIN_NAME="obs-17live.plugin"

# Set plugin directory permissions
chmod 755 "$PLUGINS_DIR"
echo "Set permissions for plugin directory: $PLUGINS_DIR"

# Set plugin file permissions
if [ -d "$PLUGINS_DIR/$PLUGIN_NAME" ]; then
    chmod -R 755 "$PLUGINS_DIR/$PLUGIN_NAME"
    echo "Set permissions for plugin: $PLUGIN_NAME"
fi

# Set dSYM file permissions (if exists)
if [ -d "$PLUGINS_DIR/$PLUGIN_NAME.dSYM" ]; then
    chmod -R 755 "$PLUGINS_DIR/$PLUGIN_NAME.dSYM"
    echo "Set permissions for plugin dSYM: $PLUGIN_NAME.dSYM"
fi

exit 0